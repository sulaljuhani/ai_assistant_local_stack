<?xml version="1.0"?>
<Container version="2">
  <Name>pydantic-agent</Name>
  <Repository>pydantic-agent:latest</Repository>
  <Registry>Local Build</Registry>
  <Network>ai-stack-network</Network>
  <MyIP/>
  <Shell>sh</Shell>
  <Privileged>false</Privileged>
  <Support>https://github.com/yourusername/ai_stack</Support>
  <Project>https://ai.pydantic.dev/</Project>
  <Overview>Pydantic AI Agent Service - Intelligent conversational middleware between AnythingLLM and tools. Evaluates requests, asks clarifying questions, validates data, and orchestrates tool execution. Provides smart task management, reminders, food logging with conversation memory.</Overview>
  <Category>Productivity: AI: Status:Beta</Category>
  <WebUI>http://[IP]:[PORT:8000]/</WebUI>
  <TemplateURL/>
  <Icon>https://raw.githubusercontent.com/pydantic/pydantic/main/docs/logo-white.svg</Icon>
  <ExtraParams>--network=ai-stack-network</ExtraParams>
  <PostArgs/>
  <CPUset/>
  <DateInstalled/>
  <DonateText/>
  <DonateLink/>
  <Requires>Build image first: cd /mnt/user/appdata/ai_stack/containers/pydantic-agent &amp;&amp; docker build -t pydantic-agent:latest . Requires: PostgreSQL, Ollama, and n8n containers running on ai-stack-network. Create Docker network: docker network create ai-stack-network</Requires>

  <!-- Port Configuration -->
  <Config Name="Agent API Port" Target="8000" Default="8000" Mode="tcp" Description="Pydantic AI Agent API port" Type="Port" Display="always" Required="true" Mask="false">8000</Config>

  <!-- Database Configuration -->
  <Config Name="PostgreSQL Host" Target="POSTGRES_HOST" Default="postgres-ai-stack" Mode="" Description="PostgreSQL container hostname" Type="Variable" Display="always" Required="true" Mask="false">postgres-ai-stack</Config>
  <Config Name="PostgreSQL Port" Target="POSTGRES_PORT" Default="5432" Mode="" Description="PostgreSQL port (internal container port)" Type="Variable" Display="always" Required="true" Mask="false">5432</Config>
  <Config Name="PostgreSQL Database" Target="POSTGRES_DB" Default="aistack" Mode="" Description="Database name" Type="Variable" Display="always" Required="true" Mask="false">aistack</Config>
  <Config Name="PostgreSQL User" Target="POSTGRES_USER" Default="aistack_user" Mode="" Description="Database username" Type="Variable" Display="always" Required="true" Mask="false">aistack_user</Config>
  <Config Name="PostgreSQL Password" Target="POSTGRES_PASSWORD" Default="" Mode="" Description="Database password (must match PostgreSQL container)" Type="Variable" Display="always" Required="true" Mask="true">changeme_secure_password</Config>

  <!-- n8n Configuration -->
  <Config Name="n8n Base URL" Target="N8N_BASE_URL" Default="http://n8n:5678/webhook" Mode="" Description="n8n webhook base URL (for tool execution)" Type="Variable" Display="always" Required="true" Mask="false">http://n8n:5678/webhook</Config>

  <!-- Ollama Configuration -->
  <Config Name="Ollama Model" Target="OLLAMA_MODEL" Default="ollama:llama3.2:3b" Mode="" Description="Ollama model to use for agent (format: ollama:model_name)" Type="Variable" Display="always" Required="true" Mask="false">ollama:llama3.2:3b</Config>
  <Config Name="Ollama Base URL" Target="OLLAMA_BASE_URL" Default="http://ollama-ai-stack:11434" Mode="" Description="Ollama API base URL" Type="Variable" Display="always" Required="true" Mask="false">http://ollama-ai-stack:11434</Config>

  <!-- User Configuration -->
  <Config Name="Default User ID" Target="DEFAULT_USER_ID" Default="00000000-0000-0000-0000-000000000001" Mode="" Description="Single-user mode: default user UUID" Type="Variable" Display="advanced" Required="true" Mask="false">00000000-0000-0000-0000-000000000001</Config>
</Container>
