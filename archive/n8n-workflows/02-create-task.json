{
  "name": "Create Task",
  "nodes": [
    {
      "parameters": {
        "httpMethod": "POST",
        "path": "create-task",
        "responseMode": "responseNode",
        "options": {}
      },
      "id": "webhook-create-task",
      "name": "Webhook",
      "type": "n8n-nodes-base.webhook",
      "typeVersion": 1,
      "position": [250, 300],
      "webhookId": "create-task"
    },
    {
      "parameters": {
        "operation": "select",
        "schema": "public",
        "table": "categories",
        "returnAll": false,
        "limit": 1,
        "where": {
          "conditions": [
            {
              "column": "user_id",
              "operator": "=",
              "value": "={{ $env.DEFAULT_USER_ID }}"
            },
            {
              "column": "name",
              "operator": "=",
              "value": "={{ $json.body.category || 'General' }}"
            }
          ]
        }
      },
      "id": "get-category-id",
      "name": "Get Category ID",
      "type": "n8n-nodes-base.postgres",
      "typeVersion": 2,
      "position": [450, 300],
      "credentials": {
        "postgres": {
          "id": "postgres-ai-stack",
          "name": "AI Stack PostgreSQL"
        }
      }
    },
    {
      "parameters": {
        "operation": "insert",
        "schema": "public",
        "table": "tasks",
        "columns": {
          "mappingMode": "defineBelow",
          "value": {
            "user_id": "={{ $env.DEFAULT_USER_ID }}",
            "title": "={{ $json.body.title }}",
            "description": "={{ $json.body.description || null }}",
            "status": "={{ $json.body.status || 'todo' }}",
            "priority": "={{ $json.body.priority || 'medium' }}",
            "due_date": "={{ $json.body.due_date || null }}",
            "category_id": "={{ $('Get Category ID').item.json.id }}",
            "parent_task_id": "={{ $json.body.parent_task_id || null }}"
          }
        },
        "options": {
          "returnFields": "id,title,status,due_date"
        }
      },
      "id": "postgres-insert",
      "name": "PostgreSQL - Insert Task",
      "type": "n8n-nodes-base.postgres",
      "typeVersion": 2,
      "position": [650, 300],
      "credentials": {
        "postgres": {
          "id": "postgres-ai-stack",
          "name": "AI Stack PostgreSQL"
        }
      }
    },
    {
      "parameters": {
        "respondWith": "json",
        "responseBody": "={{ { \"success\": true, \"task\": $json } }}"
      },
      "id": "respond-success",
      "name": "Respond Success",
      "type": "n8n-nodes-base.respondToWebhook",
      "typeVersion": 1,
      "position": [850, 300]
    }
  ],
  "connections": {
    "Webhook": {
      "main": [
        [
          {
            "node": "Get Category ID",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "Get Category ID": {
      "main": [
        [
          {
            "node": "PostgreSQL - Insert Task",
            "type": "main",
            "index": 0
          }
        ]
      ]
    },
    "PostgreSQL - Insert Task": {
      "main": [
        [
          {
            "node": "Respond Success",
            "type": "main",
            "index": 0
          }
        ]
      ]
    }
  },
  "active": true,
  "settings": {
    "executionOrder": "v1"
  },
  "versionId": "1",
  "meta": {
    "instanceId": "ai-stack"
  },
  "tags": []
}
