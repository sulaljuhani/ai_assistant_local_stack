{
  "name": "Create Event",
  "hubId": "create-event",
  "schema": "skill-1.0.0",
  "version": "1.0.0",
  "description": "Create a calendar event with start and end times. Can include title, location, description, and category.",
  "active": true,
  "imported": true,
  "author": "AI Stack",
  "license": "MIT",
  "entrypoint": {
    "file": "handler.js",
    "params": {
      "title": {
        "description": "Event title",
        "type": "string"
      },
      "start_time": {
        "description": "Event start time in ISO format (e.g., 2025-11-22T14:00:00Z)",
        "type": "string"
      },
      "end_time": {
        "description": "Event end time in ISO format (e.g., 2025-11-22T15:00:00Z)",
        "type": "string"
      },
      "location": {
        "description": "Event location (optional)",
        "type": "string"
      },
      "category": {
        "description": "Event category (e.g., Work, Personal, Meeting)",
        "type": "string"
      }
    }
  },
  "examples": [
    {
      "prompt": "Schedule a team meeting tomorrow at 2 PM for 1 hour",
      "call": "{\"title\": \"Team Meeting\", \"start_time\": \"2025-11-22T14:00:00Z\", \"end_time\": \"2025-11-22T15:00:00Z\", \"category\": \"Work\"}"
    },
    {
      "prompt": "Add a dentist appointment on Friday at 10 AM",
      "call": "{\"title\": \"Dentist Appointment\", \"start_time\": \"2025-11-22T10:00:00Z\", \"end_time\": \"2025-11-22T11:00:00Z\", \"category\": \"Health\"}"
    },
    {
      "prompt": "Create a lunch meeting at the office tomorrow at noon",
      "call": "{\"title\": \"Lunch Meeting\", \"start_time\": \"2025-11-22T12:00:00Z\", \"end_time\": \"2025-11-22T13:00:00Z\", \"location\": \"Office\", \"category\": \"Work\"}"
    }
  ]
}
